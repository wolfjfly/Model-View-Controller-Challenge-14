<head><title>Your Dashboard</title></head>
<body>
    <div class="container-center d-flex justify-content-center align-items-center flex-column">
        {{#if posts.length}}
        <div class="container-fluid">
        {{#each posts as |post|}}
        <div class="card mt-3">
            <a href="/post/{{id}}">
            <div class="card-header">
                <h2 id="post-title">{{post_title}}</h2>
                <span id="user-created">Created By: {{post.user.username}}</span><br>
                <span id="date-created">On: {{format_date date_created}}</span>
            </div></a>
            {{!-- <div class="card-body">
                {{post_body}}
            </div> --}}
        </div>
        <button type="submit">
            <a href="/dashboard/edit/{{id}}">Edit</a>
        </button>
        {{/each}}
    </div>
        {{else}}
        <h4 class="text-center">You do not currently have any posts.</h4>
        {{/if}}
    </div>
    <footer class="footer flex-row justify-center">
        {{!-- <a href="/dashboard/new">➕ New Post</a> --}}
        <a type="submit" class="btn-post" id="newPost" href="/dashboard/new">➕ New Post</a>
    </footer>
</body>
<script src="/js/new.js"><script>